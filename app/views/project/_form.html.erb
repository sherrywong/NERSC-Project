<div id="autosave"></div>
<div class='editor-left'>
  <div>
    <div>
    Name: <%= text_field 'project', 'name', :placeholder => "Name", :required => true %>
    </div>
    <%# JT - added prefix at creation time (optional)%>
    <div>
    Prefix: <%= text_field 'project', 'prefix', :placeholder => "Prefix", :required => true%>
    </div>
    <div>
    Description: <%= text_field 'project', 'description', :placeholder => "Description", :required => true %>
    </div>
    <%# JT - added owner_username for owner setting at creation%>
    <div>
    Owner: <%= text_field 'project', 'owner_username', :placeholder => "Owner", :required => true%>
    </div>
    <div>Risk Matrix
      <table id="risk_mx">
      <% 3.downto(1).each do |p| %>
        <tr>
        <% (1..3).each do |i| %>
          <td class = 'risk_cell' id="project[probability_impact_<%= p%><%= i%>]">
             <select class='risk_menu' onchange="changeColor(this);" name = 'project[probability_impact_<%= p %><%= i %>]'>
             <%# JT - changed values to 1 2 3 - database dependent information sorry for the bad style!%>
                <option value="3" <%= "selected" if @project and eval  "@project.probability_impact_#{p}#{i} == 3"%>>High</option>
                <option value="2" <%= "selected" if @project and eval  "@project.probability_impact_#{p}#{i} == 2"%>>Med</option>
                <option value="1" <%= "selected" if @project and eval  "@project.probability_impact_#{p}#{i} == 1"%>>Low</option>
             </select>
         </td>
        <% end %>
        </tr>
       <% end %>
       </table>
     </div>
<div>
    <br>
    <% if not @project.nil? %> <%= render 'member_list' %> <% end %>
    </div>
    <br>
    <% if (not @user.nil?) and (not @project.nil?) %>
      <% if (@user.admin? and @project.status == 'active') or (@project.owner == @user and @project.status == 'active')%>
      <%= submit_tag "Save" %>
      <% end %>
    <% else %>
     <%= submit_tag "Save" %>
    <% end %>
  </div>
</div>
