<div id="autosave"></div>

<div class='clearfix'>
  <div>
    <div>
    First Name: <%= text_field 'user', 'first', :placeholder => "First Name", :required => true%>
    </div>
    <div>
    Last Name: <%= text_field 'user', 'last', :placeholder => "Last Name", :required => true %>
    </div>
    <div>
  <% if @edit %>
 Username: <%= @user_username %><%= hidden_field_tag 'user[username]', @user_username %><br/>
  <% else %>
    Username: <%= text_field 'user', 'username', :placeholder => "Username", :required => true %>
  <% end %>
    </div>
    <div>
    Email: <%= text_field 'user', 'email', :placeholder => "Email", :required => true %>
    </div>
    <div>
         <% if (not @edit) or (@current_user.admin) %>
    Admin: <select name='user[admin]'>
                <option value="true">True</option>
                <option value="false">False</option>
           </select> <% else %>
    Admin: <%= @user_admin %><%= hidden_field_tag 'user[admin]', @user_admin %><br/> <% end %>


    </div>
    <div>
<% if (not @edit)  %>
    Password: <%= password_field 'user', 'password', :placeholder => "Password", :required => true %>
<% elsif @curr_user %>
    Password: <%= password_field 'user', 'password', :placeholder => "Password" %>
 <% end %>
    </div>
    <% if @user.nil? or @user.status == 'active' %>
      <%= submit_tag "Save" %>
    <% end %>
    </div>
</div>
