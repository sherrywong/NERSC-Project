
  <% for user in @users %>
<tr class="warning">
  <td class='first'>
  <%= link_to user.username, edit_user_path(user.id) %>
  </td>
  <td><%= user.first %>
  </td>
  <td><%= user.last %>
  </td>
  <td><%= user.email %>
  </td>
  <td><%= user.admin %>
  </td>
  <td><%= user.status %>
  </td>
  <td>
   <% if user.status == "active" and !user.admin %>
   <%= link_to "X", {:action => 'destroy', :uid => user.id} -%>
   <% else %>
   <%= 'N/A' %>
   <% end %>
  </td>
  <td class='last'>
   <% if user.status == "retired" and !user.admin %>
   <%= link_to "X", {:action => 'reactivate', :uid => user.id} -%>
   <% else %>
   <%= 'N/A' %>
   <% end %>
  </td>
</tr>
<% end %>


